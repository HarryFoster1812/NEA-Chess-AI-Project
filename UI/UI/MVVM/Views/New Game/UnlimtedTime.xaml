<UserControl x:Class="UI.MVVM.Views.UnlimtedTime"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.MVVM.Views"
             xmlns:UserLoc ="clr-namespace:UI.MVVM.Models.Players"
             mc:Ignorable="d" 
             d:DesignHeight="174" d:DesignWidth="130">
    <Border BorderBrush="#707070" BorderThickness="2">
        <Grid Background="{Binding Source={x:Static UserLoc:User.Settings}, Path=BackgroundColour.ColourBrush}">
            <TextBlock Text="Unlimited Time" Foreground="{Binding Source={x:Static UserLoc:User.Settings}, Path=TextColour.ColourBrush}" HorizontalAlignment="Center" FontSize="14" Margin="3"/>

            <!-- Time Select Content-->
            <Border BorderBrush="#707070" BorderThickness="0,2,0,0" Margin="0,25,0,0">
                <Grid Margin="0,0,0,0">
                    <TextBlock Text="No Time Limit" TextWrapping="Wrap" Margin="0,0,0,20" HorizontalAlignment="Center"  Foreground="{Binding Source={x:Static UserLoc:User.Settings}, Path=TextColour.ColourBrush}" VerticalAlignment="Center"/>

                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
